#ifndef I2C_MASTER_H
#define I2C_MASTER_H

#include <stdio.h>
#include "xil_types.h"
#include "xil_assert.h"
#include "xstatus.h"

/************************** Constant Definitions ****************************/

/**************************** Type Definitions ******************************/

/**
 * The following data type keeps track of the statistics for the I2c Driver.
 */
typedef struct {
	u32 bytes_transmitted;
	u32 bytes_received;
	u32 receive_overrun_errors;
} i2c_stats;



/**
 * The following data type contains configuration information for the device.
 */
typedef struct {
	UINTPR reg_base_addr;
	u32    slave_addr;
	u32    prescale_val;
} i2c_config;


typedef struct {
	I2c_Stats stats;
	UINTPTR   reg_base_address;
	u32       is_ready;
} i2c_device;

#endif
