#ifndef I2C_MASTER_H
#define I2C_MASTER_H

#include <stdio.h>
#include "xil_types.h"
#include "xil_assert.h"
#include "xstatus.h"

/************************** Constant Definitions ****************************/

/**************************** Type Definitions ******************************/

/**
 * The following data type keeps track of the statistics for the I2c Driver.
 */
typedef struct {
	u32 BytesTransmitted;
	u32 BytesReceived;
	u32 ReceiveOverrunErrors;
} I2c_Stats;



/**
 * The following data type contains configuration information for the device.
 */
typedef struct {
	UINTPR RegBaseAddr;
	u32    SlaveAddr;
	u32    PrescaleVal;
} I2c_Config;


typedef struct {
	I2c_Stats Stats;

	UINTPTR   RegBaseAddress;
	u32       IsReady;
} I2c_Ifd;

#endif
